{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": true,
        "**/__pycache__": true
    },
    // Set flakes8 as the default linter
    "flake8.path": [".venv/bin/flake8"],
    "black-formatter.path": [".venv/bin/black"],
    "python.defaultInterpreterPath": ".venv/bin/python",
}
